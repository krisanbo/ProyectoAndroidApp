<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/iv_inicio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30sp"
    android:background="@drawable/androidpassport"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/et_nombre"
        android:layout_width="208dp"
        android:layout_height="46dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="364dp"
        android:background="#CFBD1E"
        android:contentDescription="@string/app_name"
        android:ems="10"
        android:hint="@string/et_nombre"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_nuestro"
        android:layout_width="139dp"
        android:layout_height="47dp"
        android:layout_marginEnd="196dp"
        android:layout_marginBottom="16dp"
        android:text="@string/tv_nuestro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton"
        app:layout_constraintVertical_bias="0.796" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="107dp"
        android:layout_height="161dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="16dp"
        android:text="@string/tv1"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_record"
        android:layout_width="163dp"
        android:layout_height="31dp"
        tools:layout_editor_absoluteX="184dp"
        tools:layout_editor_absoluteY="419dp" />

    <ImageButton
        android:id="@+id/bt_jugar"
        android:layout_width="92dp"
        android:layout_height="85dp"
        android:onClick="jugar"
        app:srcCompat="@drawable/botoninicio"
        tools:layout_editor_absoluteX="223dp"
        tools:layout_editor_absoluteY="231dp" />

</androidx.constraintlayout.widget.ConstraintLayout>